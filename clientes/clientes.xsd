<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           version="0.1" xml:lang="es">
    
    <xs:element name="Sede-central">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Sede" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="empleado" type="xs:string"/>
                            <xs:element name="fecha" type="xs:string"/>
                            <xs:element name="descripcion" type="xs:string"/>
                                <xs:element name="cliente" maxOccurs="unbounded">
                                    <xs:complexType>
                                        <xs:sequence>
                                            <xs:element name="codigocliente" type="xs:string"/>
                                            <xs:element name="nViviendas" type="xs:string"/>
                                            <xs:element name="coste" type="xs:string"/>
                                            <xs:element name="Resumen" type="xs:string"/>
                                            <xs:element name="plazo" type="xs:integer"/>
                                        </xs:sequence>
                                    </xs:complexType>
                                </xs:element>
                            </xs:sequence>
                            <xs:attribute type="xs:ochoDigitos" name="codigo" use="required"/>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>             
            </xs:complexType>
        </xs:element>
        <xs:simpleType name="codigo">
    <xs:restriction base="xs:string">
      <xs:pattern value="[A-Z][0-9]"/>
    </xs:restriction>
  </xs:simpleType>

    </xs:schema>
